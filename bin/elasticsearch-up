#!/bin/bash

DOCKERNAME="elasticsearch"
NAME="elasticsearch"
STANDAR_PORT=9200
PORT=$STANDAR_PORT
VERSION=latest

function new_container {
  IMAGE_EXTRA_OPTIONS="-e 'http.host=0.0.0.0' -e transport.host=127.0.0.1 -e 'xpack.security.enabled=false' -v /var/lib/elasticsearch/$VERSION:/usr/share/elasticsearch/data"
  docker run $DEFAULT_OPTIONS $IMAGE_EXTRA_OPTIONS $IMAGE_NAME
}

source $DOCKERDBMANAGERPATH/libexec/docker_wrapper_template
