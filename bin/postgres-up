#!/bin/bash

DOCKERNAME="postgres"
NAME="postgres"
PORT=5432
VERSION="latest"

function new_container {
  IMAGE_NAME="$DOCKERNAME:$VERSION"
  IMAGE_OPTIONS="--add-host local.docker:172.17.0.1 -v postgres-data-$VERSION:/var/lib/postgresql/data"
  echo $NAME-$VERSION in $PORT
  docker run --name $NAME-$VERSION -d --restart=unless-stopped -p $PORT:5432 $IMAGE_OPTIONS $IMAGE_NAME
}

source $DOCKERWRAPPERS_ROOT/libexec/docker_wrapper_template
