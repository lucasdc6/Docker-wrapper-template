#!/bin/bash

DOCKERNAME="postgres"
NAME="postgres"
STANDAR_PORT=5432
PORT=$STANDAR_PORT
VERSION="latest"

function new_container {
  IMAGE_EXTRA_OPTIONS="-v postgres-data-$VERSION:/var/lib/postgresql/data"
  docker run $DEFAULT_OPTIONS $IMAGE_EXTRA_OPTIONS $IMAGE_NAME
}

function connect_container {
  if [ $# -eq 0 ]; then
    USER=postgres
  else
    USER=$1
  fi

  docker exec -it "postgres-$VERSION" psql -U $USER
}

source $DOCKERDBMANAGERPATH/libexec/docker_wrapper_template
